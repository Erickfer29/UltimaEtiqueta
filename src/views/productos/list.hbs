<div class="container">
    <div class="row mt-5">
        <h3 class="text-center texts-uppercase p-2">Lista de Productos</h3>

        {{#if productos}}

        <table class="table text-center">
            <thead>
                <tr class="table-dark">
                    <th scope="col"> Imagen </th>
                    <th scope="col" class="col-4"> Nombre </th>
                    <th scope="col"> Descripcion </th>
                    <th scope="col"> Precio </th>
                    <th scope="col"> Stock </th>
                    <th scope="col"> Talla </th>
                    <th scope="col"> Color </th>
                    <th scope="col"> Categoria </th>
                    <th scope="col"> Accion </th>
                </tr>
            </thead>
            <tbody>

                {{#each productos}}
                <tr>
                    <td>
                        <img src="/uploads/{{imagen}}" class="card-img-top mx-auto m-2 rounded-circle"
                            style="width: 150px; height: 150px;display:block;">
                    </td>
                    <td> {{nombre}} </td>
                    <td> {{Descripcion}} </td>
                    <td> {{Precio}} </td>
                    <td> {{CantidadStock}} </td>
                    <td> {{Talla}} </td>
                    <td> {{Color}} </td>
                    <td> {{Categoria}} </td>
                    <td>

                        <div class="btn-group">
                            <a href="/edit/{{id_producto}}" class="btn btn-warning p-2">
                                <i class="fa-solid fa-pencil"></i>
                            </a>
                            <a href="/delete/{{id_producto}}" class="btn btn-danger p-2">
                                <i class="fa-solid fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                {{/each}}

            </tbody>
        </table>

        {{else}}
        <div class="card text-center mx-auto">
            <div class="card-header"></div>
            <h3>Se debe agregar un producto</h3>
        </div>
        <div class="card-body">
            <p>Presiona este boton para registrar un producto en la aplicacion</p>
            <a href="/add" class="btn btn-primary">Ir a crear</a>
        </div>
        {{/if}}

    </div>
</div>