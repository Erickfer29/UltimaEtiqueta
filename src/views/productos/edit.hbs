<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Editar Nuevo Producto</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{producto.id_producto}}" method="post" enctype="multipart/form-data">

                        <div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>

                        {{#if producto.imagen}}
                            <div class="input-group mt-2">
                                <img src="/uploads/{{producto.imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </div>
                        {{/if}}

                        <div class="input-group mt-2">
                            <label for="nombre" class="input-group-text"> Nombre Producto </label>
                            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Ejemplo: Camiseta" value="{{producto.nombre}}" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="Descripcion" class="input-group-text"> Descripcion Producto </label>
                            <input class="form-control" type="text" name="Descripcion" id="Descripcion" placeholder="Ejemplo: Materiales del producto" value="{{producto.Descripcion}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="Precio" class="input-group-text"> Precios </label>
                            <input class="form-control" type="number" name="Precio" id="Precio" placeholder="0" value="{{producto.Precio}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="CantidadStock" class="input-group-text"> Productos en Stock </label>
                            <input class="form-control" type="number" name="CantidadStock" id="CantidadStock" placeholder="Numero de productos" value="{{producto.CantidadStock}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="Talla" class="input-group-text"> Talla </label>
                            <input class="form-control" type="text" name="Talla" id="Talla" placeholder="Ejemplo: Medida de prenda" value="{{producto.Talla}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="Color" class="input-group-text"> Color de Prenda </label>
                            <input class="form-control" type="text" name="Color" id="Color" placeholder="Ejemplo: Color de la prenda" value="{{producto.Color}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="Categoria" class="input-group-text"> Categoria </label>
                            <input class="form-control" type="text" name="Categoria" id="Categoria" placeholder="Ejemplo: Categoria" value="{{producto.Categoria}}" required >
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Crear </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>