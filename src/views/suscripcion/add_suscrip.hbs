<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Suscripciones</h3>
                </div>
                <div class="card-body">
                    <form action="/add_suscrip" method="post" enctype="multipart/form-data">

                        <div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>
                        
                        <div class="input-group mt-2">
                            <label for="Nombre" class="input-group-text"> Nombre </label>
                            <input class="form-control" type="text" name="Nombre" id="Nombre" placeholder="Ejemplo: Camiseta" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="correo" class="input-group-text"> Correo </label>
                            <input class="form-control" type="text" name="correo" id="correo" placeholder="Ejemplo: Materiales del producto" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="Precio" class="input-group-text"> Precio </label>
                            <input class="form-control" type="number" name="Precio" id="Precio" placeholder="0" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="tipo" class="input-group-text"> Tipo </label>
                            <input class="form-control" type="number" name="tipo" id="tipo" placeholder="Numero de productos" required >
                        </div>


                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Inscribirse </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>